locals {
  environment = {
    prefix          = "{{ prefix }}"
    env_short       = "{{ envShort }}"
    region          = "{{ awsRegion }}"
    domain          = "{{ domain }}"
    app_name        = "{{ awsAppName }}"
    instance_number = "{{ instanceNumber }}"
  }

  tags = {
    CreatedBy      = "Terraform"
    Environment    = "{{ environment }}"
    Source         = "https://github.com/pagopa/{{ repoName }}/tree/main/infra/bootstrapper/{{ environment }}"
  }
}
