terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> {{ awsTfProviderVersion }}"
    }

    tls = {
      source  = "hashicorp/tls"
      version = "~> {{ tlsTfProviderVersion }}"
    }

    github = {
      source  = "integrations/github"
      version = "~> {{ githubTfProviderVersion }}"
    }
  }
}

provider "aws" {
  region = local.environment.region
}
