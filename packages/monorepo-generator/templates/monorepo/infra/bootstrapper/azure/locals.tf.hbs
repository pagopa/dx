locals {
  environment = {
    prefix          = "{{ prefix }}"
    env_short       = "{{ envShort }}"
    location        = "{{ azureLocation }}"
    domain          = "{{ domain }}"
    instance_number = "{{ instanceNumber }}"
  }

  adgroups = {
    admins_name   = "{{ prefix }}-{{ envShort }}-adgroup-admin"
    devs_name     = "{{ prefix }}-{{ envShort }}-adgroup-developers"
    external_name = "{{ prefix }}-{{ envShort }}-adgroup-externals"
  }

  tags = {
    CreatedBy      = "Terraform"
    Environment    = "{{ titleCase environment }}"
    Source         = "https://github.com/pagopa/{{ repoName }}/tree/main/infra/bootstrapper/{{ environment }}"
    BusinessUnit   = {{ businessUnit }}
    CostCenter     = {{ costCenter }}
    ManagementTeam = {{ managementTeam }}
  }
}
