name: Release Bootstrapper Infrastructure
on:
  workflow_dispatch:
  push:
    branches:
      - main
    paths:
      - "infra/bootstrapper/**"
permissions:
  contents: read
jobs:
  release:
    strategy:
      matrix:
        environment: [{{#each environments}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]
    uses: pagopa/dx/.github/workflows/release-terraform-bootstrapper-v1.yaml@main
    name: Release Bootstrapper ($\{{ matrix.environment }})
    secrets: inherit
    with:
      environment: '$\{{ matrix.environment }}'
