name: Release Infrastructure

on:
  workflow_dispatch:
  push:
    branches:
      - main
    paths:
      # Trigger the workflow when resources are modified
      - "infra/resources/**"

jobs:
{{#each environments}}
  release_{{this}}:
    uses: pagopa/dx/.github/workflows/infra_apply.yaml@main
    name: Release Infrastructure ({{this}})
    permissions:
      id-token: write
      contents: read
      pull-requests: write
    secrets: inherit
    with:
      environment: '{{this}}'
      base_path: infra/resources

{{/each}}
