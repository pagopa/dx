name: Drift Detection

on:
  workflow_dispatch:
  schedule:
    - cron: '00 08 * * *' # Run at 08:00 every day

jobs:
{{#each environments}}
  drift_detection_{{this}}:
    uses: pagopa/dx/.github/workflows/infra_drift_detection.yml@main
    name: Drift Detection ({{this}})
    permissions:
      contents: read
      actions: read
      id-token: write
    secrets: inherit
    with:
      environment: '{{this}}'
      override_github_environment: 'infra-{{this}}'
      base_path: 'infra/resources'

{{/each}}
