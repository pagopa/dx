{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": []
    },
    "lint:check": {
      "inputs": []
    },
    "format:check": {},
    "test": {
      "dependsOn": ["^build"],
      "inputs": [],
      "outputLogs": "errors-only"
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [],
      "outputs": ["coverage"],
      "outputLogs": "errors-only"
    }
  }
}
