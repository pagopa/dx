locals {
  environment = {
    {{#each env.cloudAccounts}}
    {{accountPrefix this}} = {
      prefix          = "{{@root.env.prefix}}"
      env_short       = "{{envShort @root.env.name}}"
      location        = "{{defaultLocation}}"
      domain          = "{{@root.workspace.domain}}"
      app_name        = "core"
      instance_number = "01"
    }
    {{/each}}
  }

  tags = {
    CreatedBy   = "Terraform"
    Environment = "{{env.name}}"
    {{#each tags}}
    {{@key}}    = "{{this}}"
    {{/each}}
  }
}
