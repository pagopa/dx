{
  "name": "@pagopa/monorepo-generator",
  "version": "0.1.1",
  "type": "module",
  "description": "A package that will generate a monorepo, following DX conventions, from a template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/dx.git",
    "directory": "packages/monorepo-generator"
  },
  "keywords": [
    "monorepo",
    "generator",
    "dx",
    "pagopa"
  ],
  "files": [
    "dist/plopfile.js",
    "templates"
  ],
  "main": "dist/plopfile.js",
  "dependencies": {
    "plop": "^4.0.1"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "workspace:^",
    "@tsconfig/node22": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:dx",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "typecheck": "tsc --noEmit",
    "generate": "pnpm build && plop --plopfile=dist/plopfile.js"
  }
}
