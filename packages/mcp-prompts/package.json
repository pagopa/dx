{
  "name": "@pagopa/dx-mcpprompts",
  "version": "0.0.1",
  "type": "module",
  "description": "Centralized catalog of MCP prompts for PagoPA DX tools",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/dx.git",
    "directory": "packages/mcp-prompts"
  },
  "keywords": [
    "mcp",
    "prompts",
    "dx"
  ],
  "files": [
    "dist",
    "prompts"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@logtape/logtape": "^1.0.4",
    "gray-matter": "^4.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "workspace:^",
    "@tsconfig/node22": "catalog:",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "tsx": "^4.20.6",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  }
}
