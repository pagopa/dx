{
  "name": "@pagopa/plop-generator",
  "version": "0.1.0",
  "type": "module",
  "description": "PlopJS generator for creating TypeScript packages in the DX monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/dx.git",
    "directory": "packages/plop-generator"
  },
  "keywords": [
    "plop",
    "generator",
    "typescript",
    "turborepo"
  ],
  "files": [
    "dist",
    "templates"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "plop": "^4.0.1"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "workspace:^",
    "@tsconfig/node20": "^20.1.5",
    "@types/node": "^20.12.2",
    "eslint": "8.57.0",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  }
}
