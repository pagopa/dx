{
  "name": "{{packageName}}",
  "version": "0.1.0",
  "type": "module",
  "description": "{{description}}",
  "repository": {
    "type": "git",
    "url": "git+{{getGitRepositoryUrl}}.git",
    "directory": "packages/{{packageName}}"
  },
  "keywords": [],
  "files": ["dist"],
  "main": "./dist/index.js",
  "exports": {
    ".": { "import": "./dist/index.js" }
  },
  "devDependencies": {},
  "scripts": {
    "start": "node .",
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  }
}
