  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent-runtime": "^3.583.0",
    "axios": "^1.12.2",
    "fastmcp": "^3.18.0",
    "pino": "^9.1.0",
    "pino-lambda": "^4.4.1",
    "pino-pretty": "^13.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "workspace:^",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  }
