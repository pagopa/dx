{
  "name": "@pagopa/dx-mcpserver",
  "version": "0.0.0",
  "type": "module",
  "description": "An MCP server that support developers using DX tools.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/dx.git",
    "directory": "apps/mcpserver"
  },
  "keywords": [
    "DX",
    "MCP"
  ],
  "files": [
    "dist"
  ],
  "bin": {
