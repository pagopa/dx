{
  "name": "@pagopa/dx-cli",
  "version": "0.4.1",
  "type": "module",
  "description": "A CLI useful to manage DX tools.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/dx.git",
