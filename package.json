{
  "name": "@pagopa/dx",
  "packageManager": "yarn@4.4.0",
  "workspaces": [
    "packages/**",
    "apps/**",
    "infra/modules/*",
    "infra/provider",
    "infra/scripts"
  ],
  "devDependencies": {
    "@devcontainers/cli": "^0.73.0",
    "prettier": "3.2.5",
    "turbo": "^2.0.12"
