{
  "id": "node",
  "version": "1.1.1",
  "name": "Node.js",
  "description": "A template for Node.js projects",
  "documentationURL": "https://github.com/pagopa/dx/tree/main/.devcontainer/templates/node",
  "options": {
    "projectName": {
      "type": "string",
      "description": "The name of the project"
    },
    "nodeVersion": {
      "type": "string",
      "description": "The version of Node.js to use",
      "enum": ["20"],
      "default": "20"
    },
    "terraformVersion": {
      "type": "string",
      "description": "The version of Terraform to use",
      "default": "latest"
    }
  },
  "optionalPaths": [".yarnrc", "package.json"],
  "platforms": ["Node.js", "JavaScript", "Terraform", "pre-commit", "PlantUML"]
}
