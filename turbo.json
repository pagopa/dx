{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**", "bin/**"]
    },
    "typecheck": {
      "inputs": ["src/**/*.ts"]
    },
    "lint:check": {
      "inputs": ["src/**/*.ts"]
    },
    "format:check": {},
    "//#test:coverage": {
      "inputs": [
        "apps/**/src/**/*.ts",
        "packages/**/src/**/*.ts",
        "actions/**/src/**/*.ts"
      ],
      "outputs": ["coverage"],
      "outputLogs": "errors-only"
    }
  }
}
