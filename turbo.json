{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [
    "ARM_SUBSCRIPTION_ID",
    "ARM_CLIENT_ID",
    "ARM_CLIENT_SECRET",
    "ARM_TENANT_ID",
    "GITHUB_TOKEN",
    "TERRAFORM_CLI_PATH"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**", "bin/**"]
    },
    "typecheck": {
      "inputs": ["src/**/*.ts"]
    },
    "lint:check": {
      "inputs": ["src/**/*.ts"]
    },
    "format:check": {},
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/__tests__/**/*.test.ts"],
      "outputLogs": "errors-only"
    },
    "//#test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [
        "apps/**/src/**/*.ts",
        "packages/**/src/**/*.ts",
        "actions/**/src/**/*.ts"
      ],
      "outputs": ["coverage"],
      "outputLogs": "errors-only"
    },
    "tf-init": {
      "inputs": ["*.tf"],
      "outputLogs": "hash-only"
    },
    "tf-validate": {
      "dependsOn": ["tf-init"],
      "inputs": ["*.tf"],
      "outputLogs": "hash-only"
    },
    "tf-plan": {
      "dependsOn": ["tf-validate", "tf-init"],
      "outputLogs": "hash-only",
      "cache": false
    }
  }
}
