{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "docs/**", "blog/**"],
      "outputs": ["dist/**", "bin/**", "build/**", ".docusaurus/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"]
    },
    "lint:check": {
      "inputs": ["src/**/*.ts"]
    },
    "format:check": {},
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["coverage"]
    },
    "test-integration": {
      "inputs": ["**/*.tf", "**/integration.tftest.hcl"]
    }
  }
}
